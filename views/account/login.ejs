<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<%- messages() %>


<% if (errors) { %>
  <ul class="notice-login">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>



<div class="login-container">
  <form class="login-form" id="loginForm" action="/account/login" method="post">
    <label for="email">Email *</label>
    <input type="email" id="email" name="account_email" placeholder="Email" required value="<%= locals.account_email %>">

    <label for="password">Password *</label>
    <input type="password" id="password" name="account_password" placeholder="Password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*s).{12,}$">

    <button class="show-password" type="button">Show Password</button><br>
    <p class="password-requirements">Passwords must be at least 12 characters and include 1 capital letter, 1 number, and 1 special character.</p>
    <br>
    <button class="login-button" type="submit">Log In</button>
    <a class="signup-link" href="/account/register">No Account? Sign-up</a>
  </form>
</div>

